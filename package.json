    "express": "^4.18.2",
    "sanitize-html": "^2.10.0",
    "undici": "^5.21.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.41",
    "@swc/helpers": "^0.4.14",
    "@types/express": "^4",
    "@types/node": "^18.15.3",
    "@types/sanitize-html": "^2",
    "rome": "^11.0.0",
    "typescript": "^5.0.2"
  }
}
