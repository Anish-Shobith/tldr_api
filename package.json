{
  "name": "@tldr/api",
  "version": "1.0.0",
  "description": "An API for the tldr project, Unofficial tldr pages API",
  "packageManager": "yarn@3.5.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "swc src -d dist --copy-files --delete-dir-on-start",
